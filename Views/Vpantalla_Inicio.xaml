<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P_Inventario.Views.Vpantalla_Inicio"
             BackgroundColor="Gray"
             Title="GestiÃ³n de Repuesto camiones S.G.R.C."
             BackgroundImageSource="celularfondo.png"   
             >
            

    <VerticalStackLayout
        Spacing="30">

        <Grid
            RowSpacing="40">
            <Grid.RowDefinitions>

                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
          
            <Label 
            Text="ELIJA SU ROL"
           Grid.Row="1"
           Grid.Column="1"
            FontSize="15"
            TextColor="Gray"
            BackgroundColor="White"
            HorizontalOptions="Center" />
            
            <ImageButton Source="icotrabador.png"
             WidthRequest="100"
             HeightRequest="100"
            x:Name="BtnTrabajadores"
             Grid.Row="2"
             Grid.Column="0"
             Clicked="BtnTrabajadores_Clicked">
                
             </ImageButton>
            <ImageButton Source="icoinvitado.png"
             WidthRequest="100"
             HeightRequest="100"
            x:Name="BtnInvitado"
             Grid.Row="3"
             Grid.Column="2"
             Clicked="BtnInvitado_Clicked">
            </ImageButton>
            
            <ImageButton Source="icoadmin.png"
             WidthRequest="100"
             HeightRequest="100"
            x:Name="BtnAdmin"
             Grid.Row="4"
             Grid.Column="1"
             Clicked="BtnAdmin_Clicked">
            </ImageButton>

        </Grid>


    </VerticalStackLayout>
</ContentPage>